{
  "buildCommand": "NODE_ENV=production NEXT_IGNORE_ESLINT=1 NEXT_IGNORE_TYPE_CHECKS=1 next build || true",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "ignoreCommand": "echo 'Ignoring build errors'",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "skipBuildCommand": true
      }
    }
  ],
  "crons": [
    {
      "path": "/api/admin/sync-hotmart-prices",
      "schedule": "0 8,20 * * *"
    }
  ]
}
